<div class="user-info well col-md-3">
  <div class="row">
    <div class="col-md-2 col-md-offset-1">
      <br>
      <img class="profile-pic" src="<%= @user.profile_pic %>" />
    </div>
    <div class="col-md-6 col-md-offset-1">
      <h3 class="name"><%= @user.name %></h3>
      <p class="screen-name">@<%= @user.screen_name %></p>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <p class="text-center">Tweets</p>
    </div>

    <div class="col-md-3">
      <p class="text-center">Followers</p>
    </div>

    <div class="col-md-3">
      <p class="text-center">Following</p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <p class="tweets text-center "><%= @user.tweets %></p>
    </div>

    <div class="col-md-3">
      <p class="followers text-center "><%= @user.followers %></p>
    </div>

    <div class="col-md-3">
      <p class="following text-center "><%= @user.following %></p>
    </div>
  </div>
</div>
